    // 将多数命令的相关按键发送至 VSCode
    "terminal.integrated.sendKeybindingsToShell": true,
    "terminal.integrated.ignoreBracketedPasteMode": false,
    "terminal.integrated.ignoreProcessNames": [
        "starship",
        "oh-my-posh",
        "python",
        "pwsh"
